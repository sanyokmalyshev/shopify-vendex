{% schema %}
{
  "name": "flickity slideshow",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Slide autoplay"
    },
    {
      "type": "checkbox",
      "id": "enabledBulletNav",
      "label": "Enabled bullet navigation",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enabledArrowNav",
      "label": "Enabled arrow navigation"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image Slider"
        },
      ]
    },
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "url",
          "id": "video",
          "label": "Video Slide"
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "Flickity Slideshow",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "video"
        }
      ]
    }
  ]
}
{% endschema %}
