{{ 'flickity.css' | asset_url | stylesheet_tag }}
<script src="{{ 'flickity.pkgd.min.js' | asset_url }}" async></script>

<div class="main-carousel">
  {% for block in section.blocks %}
    <div class="carousel-cell">
      {% if block.type == 'image' %}
        {% unless block.settings.image == blank %}
          {{ block.settings.image | image_url: width: block.settings.image.width | image_tag: 
              width: block.settings.image.width,
              height: block.settings.image.height,
              alt: block.settings.image.alt,
              loading: 'lazy',
              sizes: '100vw'
          }}
        {% endunless %}
      {% endif %}

      {% if block.type == 'video' %}
        {% unless block.settings.video == blank %}
          <video width="320" height="240" controls>
            <source src="{{ block.settings.video }}" type="video/mp4">
            Not support
          </video>
        {% endunless %}
      {% endif %}
    </div>
  {% endfor %}
</div>

<script>
  var elem = document.querySelector('.main-carousel');
  var flkty = new Flickity( elem, {
    cellAlign: 'left',
    contain: true
  });
</script>

{% schema %}
{
  "name": "flickity slideshow",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Slide autoplay"
    },
    {
      "type": "checkbox",
      "id": "enabledBulletNav",
      "label": "Enabled bullet navigation",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enabledArrowNav",
      "label": "Enabled arrow navigation"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image Slider"
        },
      ]
    },
    {
      "type": "video",
      "name": "Video",
      "settings": [
        {
          "type": "url",
          "id": "video",
          "label": "Video Slide"
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "Flickity Slideshow",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "video"
        }
      ]
    }
  ]
}
{% endschema %}
